<%= data.autotune.theme_data[theme_name].fonts.font_css %>;

/* Theme vars */
$button-bg-color: <%= data.autotune.theme_data[theme_name].colors.button_bg_color %>;
<% if theme_name === 'custom' %>
$button-bg-color: <%= data.autotune.customColor || '#292929' %>;
<% end %>
$button-bg-color-hover: <%= data.autotune.theme_data[theme_name].colors.button_bg_color_hover %>;
$body-font-family:<%= data.autotune.theme_data[theme_name].fonts.body_font_family %>;
$button-font-family:<%= data.autotune.theme_data[theme_name].fonts.button_font_family %> !default;
$button-font-weight:<%= data.autotune.theme_data[theme_name].fonts.button_font_weight %> !default;

$button-font-color: <%= data.autotune.theme_data[theme_name].colors.button_font_color %>; !default;

@charset "utf-8";

@font-face {
  font-family: 'fontello';
  src: url('//fonts.voxmedia.com/editorial-apps/fontello-updated-3-23-15/fontello.eot');
  src: url('//fonts.voxmedia.com/editorial-apps/fontello-updated-3-23-15/fontello.eot#iefix') format('embedded-opentype'),
       url('//fonts.voxmedia.com/editorial-apps/fontello-updated-3-23-15/fontello.woff') format('woff'),
       url('//fonts.voxmedia.com/editorial-apps/fontello-updated-3-23-15/fontello.ttf') format('truetype'),
       url('//fonts.voxmedia.com/editorial-apps/fontello-updated-3-23-15/fontello.svg#fontello') format('svg');
  font-weight: normal;
  font-style: normal;
}

body {
  font-family: $body-font-family;
  font-size:16px;
  color:#222;
  background-color: none;
}
article {
  max-width: 600px;
  margin: 0 auto;
  box-sizing: border-box;
  overflow: hidden;
}

#output {
  padding: 5% 0%;
}

h4 {
  font-size:16px;
  margin: 0;
}

h2 {
  font-size: 32px;
  margin: 5px 0 0;
}

h4, h2 {
  line-height: 1.4em;
  font-weight: normal;
}


#generate {
  box-sizing: border-box;
  display: block;
  width: 100%;
  padding: 3% 1%;
  background-color: $button-bg-color;
  color: $button-font-color;
  text-align: center;
  text-decoration: none;
  text-transform: uppercase;
  font-family: $button-font-family;
  font-weight: $button-font-weight;
}
#generate:hover {
  background-color: $button-bg-color-hover;
}

.share {margin-top: 5%;}
.share a {
  display: block;
  box-sizing: border-box;
  width: 50%;
  float: left;
  padding: 3% 1%;
  text-align: center;
  text-decoration: none;
  text-transform: uppercase;
  font-size: 12px;
  font-family: $button-font-family;
}

#twitter, #twitter:visited {
  background-color: #00aced;
  color: white;
  &:hover{
    background-color: darken(#00aced, 4%);
  }
}

#twitter:before {
  content: '\e806';
}

#facebook, #facebook:visited {
  background-color: #325a97;
  color: white;
  &:hover{
    background-color: darken(#325a97, 4%);
  }
}

#facebook:before {
  content: '\e807';
}

#twitter:before,
#facebook:before {
  font-family: "fontello";
  font-style: normal;
  font-weight: normal;
  speak: none;
  display: inline-block;
  text-decoration: inherit;
  width: 1em;
  margin-right: 6px;
  text-align: center;
  font-variant: normal;
  text-transform: none;
  line-height: 1em;
}

<% if vertical === 'racked' %>
#generate {
  letter-spacing:1px;
  font-size:18px;
}
.share a {
  font-size:16px;
  letter-spacing:1px;
}
<% end %>

<% if vertical === 'recode' %>
.share a {
  font-family: 'Klavika' !important;
}
<% end %>
